@model PruebaCrudMVC.Models.ViewModels.EditUsersViewModel
@{
    ViewBag.Title = "RecuperarContraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Recuperar Contraseña</h2>
<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("RecuperarContraseña", "Access", FormMethod.Post, new { }))
        {
            @Html.HiddenFor(d => d.ID)
            @Html.AntiForgeryToken()

            @Html.ValidationMessage("error", new { @class = "text-danger" })

            @Html.LabelFor(d => d.Usuario)
            @Html.TextBoxFor(d => d.Usuario, new { @class = "form-control" })<br>

            @Html.LabelFor(d => d.Contraseña)
            @Html.PasswordFor(d => d.Contraseña, new { @class = "form-control" })<br>
            //@Html.LabelFor(d => d.Cliente)
            //@Html.DropDownListFor(d => d.Cliente, (SelectList)ViewBag.idCliente, "-Seleccionar categoria-", new { @class = "form- control" })<br>


            @Html.LabelFor(d => d.ConfirmarContraseña)
            @Html.PasswordFor(d => d.ConfirmarContraseña, new { @class = "form-control" })<br>

            <div style="text-align:right;">
                <input type="submit" class="btn btn-success" value="Guardar" />
            </div>

        }
    </div>
</div>